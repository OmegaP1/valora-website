# Site Configuration
NEXT_PUBLIC_SITE_URL=https://valora.pt
NEXT_PUBLIC_SITE_NAME=VALORA

# Analytics
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GTM_ID=GTM_CONTAINER_ID

# API Keys
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id
EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Database (if using)
DATABASE_URL=your_database_url

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
FROM_EMAIL=hello@valora.pt

# Authentication (if implementing user accounts)
NEXTAUTH_URL=https://valora.pt
NEXTAUTH_SECRET=your_nextauth_secret

# File Storage (if using cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting (if using Redis)
REDIS_URL=redis://localhost:6379

# Development
NODE_ENV=development